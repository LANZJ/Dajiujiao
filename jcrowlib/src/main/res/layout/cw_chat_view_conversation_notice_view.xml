<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cw_color_white">

    <ImageView
        android:id="@+id/noticeIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/cw_chat_conversation_notice_icon_notice" />

    <com.jopool.crow.imkit.view.CWExpandableTextView
        android:id="@+id/expandableTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/noticeIv"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:scrollbars="none"
        android:textColor="@color/cw_color_chat_conversation_name" />

    <ImageView
        android:id="@+id/expandableIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/expandableTv"/>
</RelativeLayout>