<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cw_conversationlist_item_selector">
    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/imgLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <RelativeLayout
            android:id="@+id/photoLayout"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <com.jopool.crow.imkit.view.CWCircleImageView
                android:id="@+id/photoIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cw_default_user"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/numTv"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:background="@drawable/cw_conversationlist_num_shape"
                android:text="1"
                android:textSize="14sp"
                android:textColor="#ffffff"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@id/photoLayout"
            android:layout_marginLeft="11dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/titleTv"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#333333"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""
                android:layout_toLeftOf="@+id/timeTv"
                />
            <TextView
                android:id="@+id/timeTv"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#666666"
                android:text=""
                />
            <TextView
                android:id="@+id/contentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#666666"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignParentBottom="true"
                android:text=""/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#cccccc"/>
</LinearLayout>