<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/leaveTypeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontBlack16"
                android:text="事假（共计1.0天）"
                android:layout_marginTop="@dimen/dimen_45"
                android:layout_marginLeft="@dimen/dimen_60"/>
            <TextView
                android:id="@+id/readStatusTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontRed14"
                android:text = "[未读]"
                android:layout_alignBaseline="@id/leaveTypeTv"
                android:layout_toRightOf="@id/leaveTypeTv"/>

            <TextView
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontGray14"
                android:text="昨天"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dimen_45"
                android:layout_marginRight="@dimen/dimen_30"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/approveTv"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginLeft="@dimen/dimen_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontGray14"
            tools:text = "当前审批人:黄少天"/>
        <RelativeLayout
            android:layout_marginBottom="@dimen/dimen_45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/openTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间:2016.05.03"
                style="@style/FontGray14"
                android:layout_marginTop="@dimen/dimen_30"
                android:layout_marginLeft="@dimen/dimen_60"/>

            <TextView
                android:id="@+id/endTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束时间:2016.05.04"
                style="@style/FontGray14"
                android:layout_below="@id/openTimeTv"
                android:layout_marginTop="@dimen/dimen_30"
                android:layout_marginLeft="@dimen/dimen_60"/>


            <TextView
                android:id="@+id/stateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontRed14"
                android:text="未通过"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/endTimeTv"
                android:layout_marginRight="@dimen/dimen_30"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_15"
        android:background="@color/color_bg" />
</LinearLayout>