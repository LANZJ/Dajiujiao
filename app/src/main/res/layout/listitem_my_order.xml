<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_102"
        android:paddingLeft="@dimen/dimen_30"
        android:paddingRight="@dimen/dimen_48">
        <ImageView
            android:id="@+id/dianIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/goodcar_dian"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/dianNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontLightBlack16"
            android:text="城西银泰BLT"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/dianIv"
            android:layout_marginLeft="@dimen/dimen_36"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/car_back"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/dianNameTv"
            android:layout_marginLeft="@dimen/dimen_36"/>
        <ImageView
            android:id="@+id/deleteIv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/delete"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/stateTv"
            android:layout_marginRight="@dimen/dimen_30"/>
        <TextView
            android:id="@+id/stateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontRed16"
            android:text="待付款"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <com.xuan.bigappleui.lib.view.listview.BUHighHeightListView
        android:id="@+id/goodListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:scrollbars="none"
        android:listSelector="#00000000"
        android:fadingEdgeLength="@dimen/dimen_0"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_102">
        <TextView
            android:id="@+id/xianXiaTv"
            android:layout_marginLeft="@dimen/dimen_48"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontRed14"
            android:text = "线下支付"/>
        <TextView
            android:id="@+id/desTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_48"
            style="@style/FontBlack14"
            android:text="共2件商品，共计617.00"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/color_divider"/>
    <RelativeLayout
        android:id="@+id/doLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_135">
        <TextView
            android:id="@+id/leftTv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_90"
            android:paddingLeft="@dimen/dimen_48"
            android:paddingRight="@dimen/dimen_48"
            android:textSize="@dimen/dimen_42"
            android:textColor="@drawable/text_selector"
            android:text="关闭订单"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/rightTv"
            android:layout_marginRight="@dimen/dimen_51"
            android:background="@drawable/order_btn_click"/>
        <TextView
            android:id="@+id/rightTv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_90"
            android:paddingLeft="@dimen/dimen_48"
            android:paddingRight="@dimen/dimen_48"
            android:text="确认付款"
            android:textSize="@dimen/dimen_42"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@drawable/text_selector"
            android:background="@drawable/order_btn_click"
            android:layout_marginRight="@dimen/dimen_48"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_divider"
            android:background="@color/color_divider"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_33"
        android:background="@color/color_my_bg"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/color_divider"/>
</LinearLayout>