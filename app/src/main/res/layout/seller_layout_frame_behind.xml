<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f7f7f7"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_459">

                <ImageView
                    android:id="@+id/headIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_84"
                    android:src="@drawable/icon_default_user" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_51"
                    android:layout_toRightOf="@+id/headIv"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yang Qiuli"
                        android:textColor="@color/color_444444"
                        android:textSize="@dimen/sp_54" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_21"
                        android:text="15858178400"
                        android:textColor="@color/color_444444"
                        android:textSize="@dimen/sp_54" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_seperator"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dimen_30"
                    android:background="@color/color_e5e5e5" />
            </RelativeLayout>

            <!--商家管理-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_84"
                android:layout_marginTop="@dimen/dimen_54">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_frame_behind_sjgl" />

                <TextView
                    style="@style/FrameBehindItemTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_45"
                    android:text="@string/shang_jia_gl" />
            </LinearLayout>

            <!--积分商城-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_84"
                android:layout_marginTop="@dimen/dimen_90">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_frame_behind_jfsc" />

                <TextView
                    style="@style/FrameBehindItemTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_45"
                    android:text="@string/ji_feng_sc" />
            </LinearLayout>

            <!--我的分享-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_84"
                android:layout_marginTop="@dimen/dimen_90">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_frame_behind_wdfx" />

                <TextView
                    style="@style/FrameBehindItemTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_45"
                    android:text="@string/wo_de_fx" />
            </LinearLayout>

            <!--意见反馈-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_84"
                android:layout_marginTop="@dimen/dimen_90">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_frame_behind_yjfk" />

                <TextView
                    style="@style/FrameBehindItemTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_45"
                    android:text="@string/yi_jian_fk" />
            </LinearLayout>

            <!--信誉等级-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_84"
                android:layout_marginTop="@dimen/dimen_90">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_frame_behind_xydj" />

                <TextView
                    style="@style/FrameBehindItemTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_45"
                    android:text="@string/xin_yu_dj" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_seperator"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_54"
                android:background="@color/color_e5e5e5" />

            <!--设置-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_84"
                android:layout_marginTop="@dimen/dimen_54">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_frame_behind_sz" />

                <TextView
                    style="@style/FrameBehindItemTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_45"
                    android:text="@string/she_zhi" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>