<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.xuan.bigdog.lib.widgets.title.DGTitleLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_462">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_48"
            android:layout_marginLeft="@dimen/dimen_54"
            android:layout_marginRight="@dimen/dimen_54">
            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/shui_bian_xdsmb"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_54"
                android:gravity="top"
                android:background="@null"
                android:maxLength="150"/>
            <TextView
                android:id="@+id/limitTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dimen_33"
                android:text="0/150"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_divider"
            android:layout_alignParentBottom="true"
            android:background="@color/color_eaeaea"
            android:layout_marginLeft="@dimen/dimen_54"
            android:layout_marginRight="@dimen/dimen_54"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.zjyeshi.dajiujiao.buyer.views.other.MyGridView
            android:id="@+id/gridView"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:layout_margin="@dimen/dimen_48"
            android:listSelector="@null">
        </com.zjyeshi.dajiujiao.buyer.views.other.MyGridView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_seperator"
            android:layout_alignParentBottom="true"
            android:background="@color/color_b2b2b2"/>
    </LinearLayout>
</LinearLayout>