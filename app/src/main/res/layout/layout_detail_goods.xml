<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_bg">
    <com.xuan.bigdog.lib.widgets.title.DGTitleLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.xuan.bigappleui.lib.view.scrollview.BUVerticalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:paddingLeft="@dimen/dimen_42"
                android:paddingRight="@dimen/dimen_42">
                <RelativeLayout
                    android:id="@+id/topLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_42"
                    android:paddingBottom="@dimen/dimen_42">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/photoIv"
                        android:layout_width="@dimen/dimen_435"
                        android:layout_height="@dimen/dimen_435"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_default" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_divider"
                    android:background="@color/color_divider"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimen_30">
                    <TextView
                        android:id="@+id/nameTv"
                        android:layout_marginTop="@dimen/dimen_42"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontBlack16"
                        android:text="曼萨纳雷斯城堡原装干红葡萄酒"/>
                    <TextView
                        android:id="@+id/priceTv"
                        android:layout_below="@id/nameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontRed16"
                        android:text="¥169.00"
                        android:layout_marginTop="@dimen/dimen_30"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_divider"
                    android:background="@color/color_divider"/>
                <com.zjyeshi.dajiujiao.buyer.views.SalesView
                    android:id="@+id/salesView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.zjyeshi.dajiujiao.buyer.widgets.addLessFormat.VFormatWidget
                    android:id="@+id/formatWidget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/desLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimen_39"
                    android:paddingTop="@dimen/dimen_39">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontBlack14"
                        android:text="@string/des"/>
                    <TextView
                        android:id="@+id/desTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontBlack14"
                        android:layout_marginTop="@dimen/dimen_12"
                        android:text="暂无"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_divider"
                    android:background="@color/color_divider"/>
                <RelativeLayout
                    android:id="@+id/lookCommentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/item_selector">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontBlack14"
                        android:text = "查看商品评价"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_right_arrow"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_divider"
                        android:background="@color/color_divider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>
        </com.xuan.bigappleui.lib.view.scrollview.BUVerticalScrollView>
        <com.zjyeshi.dajiujiao.buyer.widgets.store.BuyBottomWidget
            android:layout_alignParentBottom="true"
            android:id="@+id/buyBottomWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/softView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>
</LinearLayout>