<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:fitsSystemWindows="true"
    android:id="@+id/rootRl">
    <com.xuan.bigdog.lib.widgets.title.DGTitleLayout
        android:id="@+id/titleLayout"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.xuan.bigappleui.lib.view.scrollview.BUVerticalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zjyeshi.dajiujiao.buyer.widgets.store.OrderProgressWidget
                android:id="@+id/orderProgressWidget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_divider"
                android:background="@color/color_divider"
                android:layout_marginTop="@dimen/dimen_69"/>
            <RelativeLayout
                android:id="@+id/goStoreLayout"
                android:background="@drawable/item_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_18"
                android:paddingTop="@dimen/dimen_18">
                <ImageView
                    android:id="@+id/dianIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/goodcar_dian"
                    android:layout_marginLeft="@dimen/dimen_48" />
                <TextView
                    android:id="@+id/shopNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontBlack14"
                    tools:text="封疆物语食品店"
                    android:layout_toRightOf="@id/dianIv"
                    android:layout_marginLeft="@dimen/dimen_36"/>
                <TextView
                    android:id="@+id/orderNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontBlack14"
                    tools:text="编号：S100045"
                    android:layout_marginLeft="@dimen/dimen_36"
                    android:layout_toRightOf="@id/dianIv"
                    android:layout_below="@id/shopNameTv"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/color_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/userInfoLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_48"
                    android:paddingRight="@dimen/dimen_48">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_divider"
                        android:background="@color/color_divider"/>
                    <LinearLayout
                        android:layout_marginTop="@dimen/dimen_48"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="@dimen/dimen_255"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            android:text="收货人:"/>
                        <TextView
                            android:id="@+id/receiverTv"
                            android:layout_width="@dimen/dimen_0"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            tools:text="赵小龙"/>
                        <TextView
                            android:id="@+id/phoneTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            tools:text="1122354"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/dimen_30"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="@dimen/dimen_255"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            android:text="收货地址:"/>
                        <TextView
                            android:id="@+id/addressTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            tools:text="北京北京市大兴区经济区"
                            android:layout_weight="1"/>
                        <RelativeLayout
                            android:id="@+id/editAddressRl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/pro_edit"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="@dimen/dimen_30"
                        android:layout_marginTop="@dimen/dimen_30"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="@dimen/dimen_255"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            android:text="下单时间:"/>
                        <TextView
                            android:id="@+id/timeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            tools:text="2015-10-15 18:19:00"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/confirmStatusLayout"
                        android:layout_marginBottom="@dimen/dimen_30"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="@dimen/dimen_255"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            android:text="订单状态:"/>
                        <TextView
                            android:id="@+id/orderStatusDesTv"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            tools:text = "还记得上飞机还是得"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/remarkLayout"
                        android:layout_marginBottom="@dimen/dimen_30"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="@dimen/dimen_255"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            android:text="备注信息:"/>
                        <TextView
                            android:id="@+id/remarkTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            tools:text = "还记得上飞机还是得"
                            android:layout_weight="1"
                            android:layout_alignRight="@+id/er"/>
                        <View
                            android:id="@+id/er"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <RelativeLayout
                            android:id="@+id/editRemarkRl"
                            android:paddingLeft="@dimen/dimen_30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/pro_edit"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/normalGoodLayout"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/color_divider">
                        <TextView
                            android:id="@+id/normalGoodTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            style="@style/FontBlack14"
                            android:text = "常规购买"/>
                        <TextView
                            android:id="@+id/normalGoodNumAndPriceTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            style="@style/FontBlack14"
                            tools:text = "共3件商品,总计¥3.00"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <com.xuan.bigappleui.lib.view.listview.BUHighHeightListView
                        android:id="@+id/listView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:divider="@null"
                        android:scrollbars="none"
                        android:listSelector="#00000000"
                        android:fadingEdgeLength="@dimen/dimen_0"/>
                    <TextView
                        android:id="@+id/addWineTv"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/add_wine_shape"
                        android:backgroundTint="#5d0110"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/FontGray16"
                        android:text="添加酒品"
                        android:textColor="#ffff"
                        android:gravity="center_horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"/>
                    <RelativeLayout
                        android:id="@+id/marketGoodLayout"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/color_divider">
                        <TextView
                            android:id="@+id/marketGoodTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            style="@style/FontBlack14"
                            android:text = "市场支持"/>
                        <TextView
                            android:id="@+id/marketGoodNumAndPriceTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            style="@style/FontBlack14"
                            tools:text = "共3件商品,总计¥3.00"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <com.xuan.bigappleui.lib.view.listview.BUHighHeightListView
                        android:id="@+id/marketListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:divider="@null"
                        android:scrollbars="none"
                        android:listSelector="#00000000"
                        android:fadingEdgeLength="@dimen/dimen_0"/>

                    <TextView
                        android:id="@+id/marketAddWineTv"
                        style="@style/FontGray16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/add_wine_shape"
                        android:backgroundTint="#5d0110"
                        android:gravity="center_horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:textColor="#fff"
                        android:text="添加酒品" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_divider"
                android:background="@color/color_divider"/>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_divider"
                android:background="@color/color_divider" />

            <RelativeLayout
                android:id="@+id/marketLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/item_selector">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dimen_54"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        style="@style/FontBlack12"
                        android:text="使用市场支持费用" 
                        android:gravity="center_vertical"/>
                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/marketCostTv"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        style="@style/FontGray12"
                        tools:text="优先使用钱包余额进行付款" />
                </LinearLayout>
                <com.zjyeshi.dajiujiao.buyer.views.other.IVWalletCheck
                    android:id="@+id/marketCheckIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/wallet_sel"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_48" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_divider"
                    android:background="@color/color_divider"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/priceDesLayout"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontBlack12"
                        android:text="总金额"/>
                    <TextView
                        android:id="@+id/allPriceTv"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontGray12"
                        tools:text = "¥100.00"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontBlack12"
                        android:text="市场支持费用"/>
                    <TextView
                        android:id="@+id/marketPriceUseTv"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontGray12"
                        tools:text = "¥100.00"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_divider"
                android:background="@color/color_divider"/>
            <LinearLayout
                android:id="@+id/moneyLayout"
                android:orientation="vertical"
                android:background="@color/color_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_48"
                android:paddingRight="@dimen/dimen_48"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/truePayDesTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontLightBlack16"
                        android:layout_centerVertical="true"
                        android:text="实付款"/>
                    <TextView
                        android:layout_toLeftOf="@+id/truePayEt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontRed18"
                        android:layout_centerVertical="true"
                        android:text="¥"/>

                    <EditText
                        android:visibility="visible"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:id="@+id/truePayEt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontRed18"
                        android:layout_centerVertical="true"
                        tools:text="1222"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:focusable="false"
                        android:background="@null"/>

                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_divider"
                android:background="@color/color_divider" />
            <com.zjyeshi.dajiujiao.buyer.widgets.PathWidget
                android:id="@+id/pathWidget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.xuan.bigappleui.lib.view.scrollview.BUVerticalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:background="#f8f8f8">
        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="@color/color_divider" />
        <Button
            android:id="@+id/order_transfer"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="左"
            android:textColor="@color/color_white"
            android:background="@drawable/btn_click"
            android:layout_weight="1"
            android:layout_margin="6dp"/>
        <View
            android:layout_width="5dp"
            android:layout_height="50dp"
            android:background="@color/color_divider"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/confirm_orders"
            android:textColor="@color/color_white"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="右"
            android:background="@drawable/btn_click"
            android:layout_weight="1"
            android:layout_margin="6dp"/>
        <View
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:background="@color/color_divider" />
    </LinearLayout>

</RelativeLayout>