<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="@dimen/dimen_48"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_222"
        android:background="@drawable/item_selector"
        android:paddingRight="@dimen/dimen_48">
        <LinearLayout
            android:layout_toLeftOf="@+id/editIv"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontBlack16"
                android:text="姓名"/>
            <TextView
                android:id="@+id/addressTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontDistance14"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="地址地址地址地址地址地址"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/editIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_edit"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_divider"
            android:background="@color/color_divider"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>