            <RelativeLayout
                android:id="@+id/productStatusLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_135">

                <TextView
                    style="@style/FontBlack16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_45"
                    android:text="产品地位" />

                <TextView
                    android:id="@+id/productStatusTv"
                    style="@style/FontBlack16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_45"
                    android:gravity="right"
                    android:background="@color/cw_color_transparent"
                    android:hint="请选择产品地位" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_9"
                    android:src="@drawable/goin" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_divider"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/competingProductsLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_135">

                <TextView
                    style="@style/FontBlack16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_45"
                    android:text="竞品信息" />

                <EditText
                    android:id="@+id/competingProductsEt"
                    style="@style/FontBlack16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_45"
                    android:gravity="right"
                    android:background="@color/cw_color_transparent"
                    android:hint="填写竞品信息" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_divider"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_135">

                <TextView
                    style="@style/FontBlack16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_45"
                    android:text="备注" />

                <EditText
                    android:id="@+id/bzEt"
                    style="@style/FontBlack16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_45"
                    android:background="@color/cw_color_transparent"
                    android:gravity="right"
                    android:hint="请输入备注" />

