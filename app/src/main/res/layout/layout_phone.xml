<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_divider">
    <com.xuan.bigdog.lib.widgets.title.DGTitleLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dimen_24"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/dimen_33"
        android:layout_marginRight="@dimen/dimen_33"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/phone_search"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_big"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"/>
        <EditText
            android:id="@+id/searchEt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            style="@style/FontGray14"
            android:hint="搜索"
            android:paddingLeft="8dp"/>
    </LinearLayout>
    <com.xuan.bigappleui.lib.lettersort.view.LetterSortView
        android:id="@+id/letterSortView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>