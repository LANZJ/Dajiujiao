<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_225"
        android:background="@drawable/item_selector">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/titleTv"
                android:text="客户活动"
                style="@style/FontBlack16"
                android:layout_marginLeft="@dimen/dimen_60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_30"
                android:id="@+id/readStatusTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontRed14"
                android:text = "[未读]" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/moneyTv"
                android:text="¥350"
                style="@style/FontTime18"
                android:layout_margin="@dimen/dimen_30" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/timeTv"
                style="@style/FontGray14"
                android:layout_marginTop="@dimen/dimen_45"
                android:layout_marginLeft="@dimen/dimen_60"
                android:text="2016.06.16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stateTv"
                style="@style/FontRed14"
                android:text="未通过"
                android:layout_marginRight="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30"
        android:background="@color/circle_bg"
        />
</LinearLayout>