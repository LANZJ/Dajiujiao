<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_204"
        android:background="@color/color_white_trans">
        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_48"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/leadLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/shopNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontBlack16"
                android:text="拱墅区银泰百货城西店"/>
            <TextView
                android:id="@+id/addressTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontMap14"
                android:text="拱墅区三墩镇银泰百货城西店（丰潭路东）"/>
        </LinearLayout>
        <RelativeLayout
            android:background="@color/color_daohang"
            android:id="@+id/leadLayout"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dimen_204"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:id="@+id/leaderIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/daohang"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontWhite16"
                    android:text="@string/dao_hang"/>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>