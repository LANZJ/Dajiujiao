<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/mainLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:paddingTop="@dimen/dimen_60"
            android:paddingBottom="@dimen/dimen_33">
            <RelativeLayout
                android:layout_width="@dimen/dimen_219"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/headIv"
                    android:layout_width="@dimen/dimen_150"
                    android:layout_height="@dimen/dimen_150"
                    android:src="@drawable/default_img"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="@dimen/dimen_33"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_4a90e2"
                    android:textSize="16sp"
                    android:text="城西银泰BLT-马总"/>
                <TextView
                    android:background="@drawable/item_selector"
                    android:id="@+id/contentTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_444444"
                    android:textSize="14sp"
                    android:text="这个酒不错可以来试试"
                    android:layout_marginTop="@dimen/dimen_18"
                    android:layout_marginRight="6dp" />
                <!-- 单个图片 -->
                <com.zjyeshi.dajiujiao.buyer.circle.CircleImageView
                    android:id="@+id/singleImageIv"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:src="@drawable/dg_default_image"
                    android:visibility="visible" />
                <!--多个图片-->
                <com.zjyeshi.dajiujiao.buyer.circle.view.MultiImageGridView
                    android:id="@+id/multiImageGv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:layout_marginRight="@dimen/dimen_33"
                    android:visibility="visible"/>
                <!-- 链接地址 -->
                <RelativeLayout
                    android:id="@+id/pageLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_39"
                    android:background="@color/circle_bg"
                    android:layout_marginRight="@dimen/dimen_42">
                    <ImageView
                        android:id="@+id/pageImageIv"
                        android:layout_width="@dimen/dimen_150"
                        android:layout_height="@dimen/dimen_150"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/dimen_18"/>
                    <TextView
                        android:id="@+id/pageTextTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_444444"
                        android:textSize="14sp"
                        android:layout_toRightOf="@+id/pageImageIv"
                        android:layout_centerVertical="true"
                        android:maxLines="2"
                        android:text="这个酒不错可以来试试，万家超市有的买的，快来快来，很多好便宜的"/>
                </RelativeLayout>
                <!--时间和评论操作-->
                <RelativeLayout
                    android:id="@+id/midLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_117">
                    <TextView
                        android:id="@+id/timeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_999999"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:text="2015-09-01 12:20" />
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:id="@+id/remarkBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_circle_reply"
                        android:layout_marginRight="@dimen/dimen_33"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:visibility="invisible"
                        android:id="@+id/remarkLayout"
                        android:layout_marginRight="@dimen/dimen_30"
                        android:orientation="horizontal"
                        android:layout_toLeftOf="@id/remarkBtn"
                        android:background="@color/color_white"
                        android:layout_width="@dimen/dimen_537"
                        android:layout_height="match_parent">
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/circleChatIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/circle_chat"
                        android:layout_alignTop="@+id/remarkBtn"
                        android:layout_toLeftOf="@+id/remarkBtn"
                        android:layout_marginRight="@dimen/dimen_33"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/commentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_42"
                    android:visibility="visible">
                    <ImageView
                        android:layout_marginLeft="@dimen/dimen_48"
                        android:id="@+id/topIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/circle_arrow"/>
                    <LinearLayout
                        android:background="@color/circle_comment"
                        android:layout_below="@id/topIv"
                        android:id="@+id/praiseLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/zanIv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/already_praise"
                            android:layout_marginLeft="@dimen/dimen_36"
                            />
                        <TextView
                            android:layout_marginRight="12dp"
                            android:id="@+id/praiseNameTv"
                            android:layout_marginLeft="@dimen/dimen_18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontCircleZan14"
                            android:text="吴、华、坤"
                            />
                    </LinearLayout>
                    <View
                        android:id="@+id/dividerView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_divider"
                        android:background="@color/color_divider"
                        android:layout_below="@id/praiseLayout"
                        />
                    <com.xuan.bigappleui.lib.view.listview.BUHighHeightListView
                        android:layout_below="@id/dividerView"
                        android:id="@+id/commentListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:divider="@null"
                        android:fadingEdgeLength="0dp"
                        android:scrollbars="none"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    <View
        android:id="@+id/bottomDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/circle_seperator"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>