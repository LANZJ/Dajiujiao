<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_bg">
    <com.xuan.bigdog.lib.widgets.title.DGTitleLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/color_divider" />
    <RelativeLayout
        android:id="@+id/myShareLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_156"
        android:paddingLeft="@dimen/dimen_48"
        android:background="@drawable/item_selector">
        <ImageView
            android:id="@+id/myShareIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/my_ma" />
        <TextView
            android:layout_marginLeft="@dimen/dimen_42"
            android:layout_toRightOf="@id/myShareIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/FontBlack16"
            android:text="@string/my_ma"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_48"
            android:src="@drawable/goin"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/color_divider" />

    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/color_divider" />
    <RelativeLayout
        android:id="@+id/inputMaLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_156"
        android:paddingLeft="@dimen/dimen_48"
        android:background="@drawable/item_selector">
        <ImageView
            android:id="@+id/inputMaIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/my_input_ma" />
        <TextView
            android:layout_marginLeft="@dimen/dimen_42"
            android:layout_toRightOf="@id/inputMaIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/FontBlack16"
            android:text="@string/my_input_ma"/>
        <ImageView
            android:id="@+id/inputMaGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_48"
            android:src="@drawable/goin"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/color_divider" />
</LinearLayout>