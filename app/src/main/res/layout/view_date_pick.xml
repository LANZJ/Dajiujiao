<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/timePickerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/selectLayout"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white">
            <com.zjyeshi.dajiujiao.buyer.widgets.wheelview.WheelView
                android:id="@+id/yearWl"
                android:layout_width="@dimen/dimen_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <com.zjyeshi.dajiujiao.buyer.widgets.wheelview.WheelView
                android:id="@+id/monthWl"
                android:layout_width="@dimen/dimen_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <com.zjyeshi.dajiujiao.buyer.widgets.wheelview.WheelView
                android:id="@+id/dayWl"
                android:layout_width="@dimen/dimen_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:background="@color/color_eaeaea"
            android:id="@+id/unitLayout"
            android:layout_above="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/FontGray14"
                android:text="年"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/FontGray14"
                android:text="月"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/FontGray14"
                android:text="日"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:id="@+id/divider"
            android:layout_above="@+id/selectLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_divider"
            android:background="@color/color_bg" />
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/setLayout"
            android:layout_above="@id/unitLayout"
            android:background="@color/color_eaeaea"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_150">
            <TextView
                android:id="@+id/desTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontGray14"
                android:layout_centerInParent="true"
                android:text="设置日期"/>
            <TextView
                android:id="@+id/sureTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontRed16"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_48"
                android:text="确定"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_divider"
                android:background="@color/color_bg"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/remainlayout"
            android:layout_above="@id/setLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_translucent"/>
    </RelativeLayout>
</LinearLayout>