<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/allLayout"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/color_divider"
        android:layout_above="@+id/bottomLayout"/>
    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150"
        android:background="@color/color_white"
        android:paddingTop="@dimen/dimen_33"
        android:paddingBottom="@dimen/dimen_12"
        android:paddingLeft="@dimen/dimen_12">
    <RelativeLayout
        android:layout_toLeftOf="@+id/sendBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
        android:id="@+id/sendEt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        style="@style/FontBlack18"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/color_red_theme"
        android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <Button
        android:id="@+id/sendBtn"
        android:layout_width="@dimen/dimen_150"
        android:layout_height="match_parent"
        android:background="@drawable/login_shape"
        android:layout_alignParentRight="true"
        style="@style/FontWhite14"
        android:text="@string/fa_song"/>
    </RelativeLayout>
</RelativeLayout>
