<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_bg">
    <com.xuan.bigdog.lib.widgets.title.DGTitleLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150"
        >
        <TextView
            style="@style/FontBlack16"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_48"
            android:layout_height="wrap_content"
            android:text = "时间"/>
        <TextView
            android:id="@+id/timeTv"
            style="@style/FontGray16"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_48"
            android:layout_height="wrap_content"
            tools:text = "20160809"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.xuan.bigappleui.lib.view.scrollview.BUVerticalScrollView
            android:id="@+id/scrollView"
            android:layout_above="@+id/commentBottomView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_selector">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_divider"
                        android:background="@color/color_divider"
                        />
                    <TextView
                        android:id="@+id/textView"
                        android:layout_marginLeft="@dimen/dimen_45"
                        android:layout_toRightOf="@id/manageIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontBlack16"
                        android:layout_marginTop="@dimen/dimen_45"
                        android:text="今日行程"/>
                    <EditText
                        android:maxLength="1000"
                        android:paddingBottom="30dp"
                        android:layout_below="@id/textView"
                        android:id="@+id/xcEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/FontBlack16"
                        android:background="@color/cw_color_transparent"
                        android:singleLine="false"
                        android:layout_marginLeft="@dimen/dimen_45"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="@dimen/dimen_30"
                        android:hint="填写今日行程"
                        android:gravity="top"
                        android:paddingTop="@dimen/dimen_15" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_divider"
                        android:background="@color/color_divider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_selector">
                    <TextView
                        android:id="@+id/textView1"
                        android:layout_marginLeft="@dimen/dimen_45"
                        android:layout_toRightOf="@id/manageIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontBlack16"
                        android:layout_marginTop="@dimen/dimen_45"
                        android:text="今日小结"/>
                    <EditText
                        android:maxLength="1000"
                        android:paddingBottom="30dp"
                        android:id="@+id/xjEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/FontBlack16"
                        android:background="@color/cw_color_transparent"
                        android:layout_below="@id/textView1"
                        android:singleLine="false"
                        android:layout_marginLeft="@dimen/dimen_45"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="@dimen/dimen_30"
                        android:hint="填写今日小结"
                        android:gravity="top"
                        android:paddingTop="@dimen/dimen_15" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_divider"
                        android:background="@color/color_divider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_selector">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_marginLeft="@dimen/dimen_45"
                        android:layout_toRightOf="@id/manageIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontBlack16"
                        android:layout_marginTop="@dimen/dimen_45"
                        android:text="今日费用"/>
                    <EditText
                        android:maxLength="1000"
                        android:paddingBottom="30dp"
                        android:id="@+id/fyEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/FontBlack16"
                        android:background="@color/cw_color_transparent"
                        android:layout_below="@id/textView2"
                        android:singleLine="false"
                        android:layout_marginLeft="@dimen/dimen_45"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="@dimen/dimen_30"
                        android:hint="填写今日费用"
                        android:gravity="top"
                        android:paddingTop="@dimen/dimen_15"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_divider"
                        android:background="@color/color_divider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_selector">
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_marginLeft="@dimen/dimen_45"
                        android:layout_toRightOf="@id/manageIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontBlack16"
                        android:layout_marginTop="@dimen/dimen_45"
                        android:text="明日计划"/>
                    <EditText
                        android:maxLength="1000"
                        android:paddingBottom="30dp"
                        android:id="@+id/jhEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/FontBlack16"
                        android:background="@color/cw_color_transparent"
                        android:layout_below="@id/textView3"
                        android:singleLine="false"
                        android:layout_marginLeft="@dimen/dimen_45"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="@dimen/dimen_30"
                        android:hint="填写明日计划"
                        android:gravity="top"
                        android:paddingTop="@dimen/dimen_15"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_divider"
                        android:background="@color/color_divider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_selector">
                    <TextView
                        android:id="@+id/remarkTv"
                        android:layout_marginLeft="@dimen/dimen_45"
                        android:layout_toRightOf="@id/manageIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontBlack16"
                        android:layout_marginTop="@dimen/dimen_45"
                        android:layout_marginBottom="15dp"
                        android:text="备注"/>

                    <com.xuan.bigappleui.lib.view.listview.BUHighHeightListView
                        android:id="@+id/remarkListView"
                        android:layout_below="@id/remarkTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:divider="@null"
                        android:fadingEdgeLength="0dp"
                        android:scrollbars="none"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_divider"
                        android:background="@color/color_divider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_selector"
                    >
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_45"
                        android:layout_toRightOf="@id/manageIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontBlack16"
                        android:layout_marginTop="@dimen/dimen_45"
                        android:layout_marginBottom="15dp"
                        android:text="抄送"
                        android:id="@+id/textView4" />
                    <TextView
                        android:id="@+id/csman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontBlack16"
                        android:text=">"
                        android:layout_marginRight="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_alignTop="@+id/textView4"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_divider"
                        android:background="@color/color_divider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/listLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_30"
                        style="@style/FontGray14"
                        android:text="评论"/>
                    <com.xuan.bigappleui.lib.view.listview.BUHighHeightListView
                        android:id="@+id/listView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:divider="@null"
                        android:fadingEdgeLength="0dp"
                        android:scrollbars="none"/>
                </LinearLayout>
            </LinearLayout>
        </com.xuan.bigappleui.lib.view.scrollview.BUVerticalScrollView>
        <!--评论-->
        <com.zjyeshi.dajiujiao.buyer.views.comment.CommentBottomBarView
            android:id="@+id/commentBottomView"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.zjyeshi.dajiujiao.buyer.views.comment.CommentVolumeView
            android:id="@+id/volumeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>