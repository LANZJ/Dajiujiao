<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rebackGoodTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="16dp"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/goodTypeTv"
            style="@style/FontBlack14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            tools:text="商品类型" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_divider"
            android:background="@color/color_divider"/>
    </RelativeLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatarIv"
            android:layout_width="@dimen/dimen_180"
            android:layout_height="@dimen/dimen_180"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_45"
            android:src="@drawable/ic_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8dp">
            <TextView
                android:id="@+id/nameTv"
                style="@style/FontBlack16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王朝大酒窖" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/priceTv"
                        style="@style/FontGray14"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="x12" />

                    <TextView
                        android:id="@+id/desTv"
                        style="@style/FontGray14"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="700ml/瓶 6瓶/箱" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        style="@style/FontGray14"
                        android:text="需退"
                        android:layout_gravity="bottom"
                        android:gravity="center"/>
                    <com.zjyeshi.dajiujiao.buyer.views.AloneEditText
                        android:id="@+id/backBoxEt"
                        android:layout_marginTop="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        style="@style/FontBlack18"
                        android:background="@drawable/no_corner_shape"
                        android:gravity="bottom|center" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        style="@style/FontGray14"
                        android:text="箱"
                        android:layout_gravity="bottom"
                        android:gravity="center"/>
                    <com.zjyeshi.dajiujiao.buyer.views.AloneEditText
                        android:id="@+id/backUnitEt"
                        android:layout_marginTop="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        style="@style/FontBlack18"
                        android:background="@drawable/no_corner_shape"
                        android:gravity="bottom|center"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        style="@style/FontGray14"
                        android:text="瓶"
                        android:layout_gravity="bottom"
                        android:gravity="center"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/color_divider"/>
</LinearLayout>