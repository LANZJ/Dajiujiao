<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_bg">
    <com.xuan.bigdog.lib.widgets.title.DGTitleLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#fff4af">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontRed14"
            android:text="提醒：请认证填写，保证所退货品不影响二次销售"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.xuan.bigappleui.lib.view.scrollview.BUVerticalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rebackDesTv">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_divider"
                    android:background="@color/color_divider"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontBlack14"
                        android:text="退货列表"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_divider"
                    android:background="@color/color_divider"/>
                <com.xuan.bigappleui.lib.view.listview.BUHighHeightListView
                    android:id="@+id/rebackListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:divider="@null"
                    android:scrollbars="none"
                    android:listSelector="#00000000"
                    android:fadingEdgeLength="@dimen/dimen_0"/>
                <com.xuan.bigappleui.lib.view.listview.BUHighHeightListView
                    android:id="@+id/rebacMarketListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:divider="@null"
                    android:scrollbars="none"
                    android:listSelector="#00000000"
                    android:fadingEdgeLength="@dimen/dimen_0"/>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_divider"
                    android:background="@color/color_divider"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:orientation="vertical"
                    android:background="@color/color_white">
                    <RelativeLayout
                        android:id="@+id/rebackTypeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontBlack14"
                            android:text="活动礼品"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:id="@+id/rebackTypeTv"
                            android:layout_toLeftOf="@+id/rightArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontBlack14"
                            tools:text = "选择退还方式"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"/>
                        <ImageView
                            android:id="@+id/rightArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_right_arrow"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_divider"
                            android:background="@color/color_divider"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontBlack14"
                        android:text="备注"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>
                    <EditText
                        android:id="@+id/remarkEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="16dp"
                        android:background="@null"
                        android:hint="请输入备注"
                        style="@style/FontBlack14"/>
                    <com.zjyeshi.dajiujiao.buyer.widgets.uploadMultImage.GridViewImageWidget
                        android:background="@color/color_white"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="16dp"
                        android:id="@+id/gridViewImageWidget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </com.xuan.bigappleui.lib.view.scrollview.BUVerticalScrollView>
        <TextView
            android:id="@+id/rebackDesTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontRed14"
            android:text="退货后如果不满足优惠条件，需退回优惠的部分"
            android:layout_above="@+id/nextBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"/>
        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/no_corner_btn_click"
            style="@style/FontWhite16"
            android:text="下一步"/>
    </RelativeLayout>
</LinearLayout>