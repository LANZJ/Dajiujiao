<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_bg">
    <com.xuan.bigdog.lib.widgets.title.DGTitleLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_margin="@dimen/dimen_48"
        android:id="@+id/desTv"
        android:layout_above="@id/sendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FontBlack16"
        android:text="启用通讯录匹配，查看您的通讯录中是否有好友注册使用该应用"/>
    
    <Button
        android:id="@+id/sendBtn"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/theme_selector"
        style="@style/FontWhite20"
        android:text="启用通讯录"/>
</RelativeLayout>