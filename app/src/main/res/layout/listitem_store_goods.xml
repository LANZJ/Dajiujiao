<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_267"
        android:paddingTop="@dimen/dimen_48"
        android:background="@drawable/item_selector">
        <ImageView
            android:layout_marginLeft="@dimen/dimen_48"
            android:id="@+id/goodPhotoIv"
            android:layout_width="@dimen/dimen_171"
            android:layout_height="@dimen/dimen_171"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default"
            />
        <RelativeLayout
            android:layout_marginRight="@dimen/dimen_48"
            android:id="@+id/textLayout"
            android:layout_toRightOf="@id/goodPhotoIv"
            android:layout_marginLeft="@dimen/dimen_33"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_171">
            <TextView
                android:layout_alignParentTop="true"
                android:id="@+id/wineNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontBlack14"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="曼萨纳雷斯城堡原装干红葡萄酒"
                />
            <TextView
                android:id="@+id/typeTv"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                style="@style/FontBlack14"
                android:text="规格"/>
            <TextView
                android:id="@+id/priceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                style="@style/FontRed14"
                android:text="¥169.00"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_divider"
            android:background="@color/color_divider"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@id/textLayout"
            />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/moreLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_168"
        android:background="@color/color_white"/>
</LinearLayout>