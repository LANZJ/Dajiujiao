<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">
        <!--<TextView-->
            <!--android:id="@+id/myKcTv"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--style="@style/FontBlack16"-->
            <!--tools:text = "我的库存:"/>-->
        <LinearLayout
            android:background="@color/color_bottom_translucent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_168"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/normalPriceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#333333"
                    android:layout_weight="1">
                    <TextView
                        android:paddingLeft="5dp"
                        android:id="@+id/carNumTv"
                        android:layout_width="match_parent"
                        android:layout_toLeftOf="@+id/carPriceTv"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:ellipsize="end"
                        style="@style/FontWhite16"
                        tools:text = "3箱" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/dimen_30"
                        android:layout_marginRight="@dimen/dimen_30"
                        android:id="@+id/carPriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontWhite16"
                        android:text="0元"
                        android:layout_gravity="center_vertical" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/marketPriceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#333333">
                    <TextView
                        android:paddingLeft="5dp"
                        android:id="@+id/marketCarNumTv"
                        android:layout_width="match_parent"
                        android:layout_toLeftOf="@+id/marketCarPriceTv"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:ellipsize="end"
                        style="@style/FontWhite16"
                        tools:text = "3箱" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/dimen_30"
                        android:layout_marginRight="@dimen/dimen_30"
                        android:id="@+id/marketCarPriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontWhite16"
                        android:text="0元"
                        android:layout_gravity="center_vertical" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/goCarBtn"
                android:layout_width="100dp"
                android:layout_height="@dimen/dimen_168"
                android:background="@drawable/no_corner_btn_click"
                style="@style/FontWhite16"
                android:text="@string/go_buy_car" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>