<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:paddingTop="@dimen/dimen_60">
    <RelativeLayout
        android:layout_width="@dimen/dimen_219"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/dimen_150"
            android:layout_height="@dimen/dimen_150"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/dimen_33"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_4a90e2"
            android:textSize="16sp"
            android:text="城西银泰BLT-马总"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_444444"
            android:textSize="14sp"
            android:text="这个酒不错可以来试试"
            android:layout_marginTop="@dimen/dimen_33"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_216"
            android:layout_marginTop="@dimen/dimen_39"
            android:background="@color/color_white"
            android:layout_marginRight="@dimen/dimen_42"
            android:paddingRight="@dimen/dimen_42">
            <ImageView
                android:id="@+id/imageIv"
                android:layout_width="@dimen/dimen_150"
                android:layout_height="@dimen/dimen_150"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_36"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_444444"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/imageIv"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_42"
                android:maxLines="2"
                android:text="这个酒不错可以来试试，万家超市有的买的，快来快来，很多好便宜的"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_999999"
                android:textSize="14sp"
                android:text="2015-09-01 12:20"
                android:layout_marginTop="@dimen/dimen_48"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_circle_reply"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_33"
                android:layout_marginTop="@dimen/dimen_33"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_divider"
            android:background="@color/color_divider"
            android:layout_marginTop="@dimen/dimen_39"/>
    </LinearLayout>

</LinearLayout>