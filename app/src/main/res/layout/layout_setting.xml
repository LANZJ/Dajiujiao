<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_bg">
    <com.xuan.bigdog.lib.widgets.title.DGTitleLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/color_divider"
        android:layout_marginTop="@dimen/dimen_117"/>
    <RelativeLayout
        android:id="@+id/versionLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_156"
        android:paddingLeft="@dimen/dimen_48"
        android:background="@drawable/item_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontBlack16"
            android:layout_centerVertical="true"
            android:text="@string/version"
            />
        <TextView
            android:id="@+id/versionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontGray16"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_39"
            android:layout_alignParentRight="true" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_divider"
            android:background="@color/color_divider"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/cleanLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_156"
        android:background="@drawable/item_selector">
        <TextView
            android:layout_marginLeft="@dimen/dimen_48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontBlack16"
            android:layout_centerVertical="true"
            android:text="@string/clean"
            />
        <TextView
            android:id="@+id/cachTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontGray16"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_39"
            android:layout_alignParentRight="true"
            android:text="5MB"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_divider"
            android:background="@color/color_divider"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/color_divider"
        android:layout_marginTop="@dimen/dimen_48"/>
    <RelativeLayout
        android:id="@+id/aboutLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_156"
        android:paddingLeft="@dimen/dimen_48"
        android:background="@drawable/item_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontBlack16"
            android:layout_centerVertical="true"
            android:text="@string/about"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_48"
            android:src="@drawable/goin"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_divider"
            android:background="@color/color_divider"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/changePassLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_156"
        android:background="@drawable/item_selector">
        <TextView
            android:layout_marginLeft="@dimen/dimen_48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontBlack16"
            android:layout_centerVertical="true"
            android:text="修改密码"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_48"
            android:src="@drawable/goin"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_divider"
            android:background="@color/color_divider"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_166"
        android:background="@drawable/item_selector"
        style="@style/FontBlack16"
        android:text="@string/logout"
        android:layout_marginTop="@dimen/dimen_48"/>
</LinearLayout>