<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/circle_comment_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <TextView
            android:id="@+id/commentNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontCircleZan14"
            android:text="阳阳"/>
        <LinearLayout
            android:id="@+id/replyLayout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontBlack14"
                android:text="回复"/>
            <TextView
                android:id="@+id/replyNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontCircleZan14"
                android:text="哈哈"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontCircle14"
            android:text=":"/>
        <TextView
            android:id="@+id/contentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontCircle14"
            android:layout_marginLeft="@dimen/dimen_33"
            android:text="这酒看起来不错，请问多少钱一瓶呢这酒看起来不错，请问多少钱一瓶呢"/>
    </LinearLayout>
</LinearLayout>