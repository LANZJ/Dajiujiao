<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E5E8"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/frameHead"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dg_widgets_title_bg_height"
        android:background="@color/dg_widgets_title_bg"
        android:gravity="center_vertical">
    <TextView
        android:id="@+id/returnTv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:drawableLeft="@drawable/dg_widgets_title_left_icon"
        android:text="返回"
        style="@style/DgWidgetsTitleLeftTv"
        android:gravity="center_vertical"/>
        <TextView
        android:id="@+id/rightTv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="@dimen/dg_widgets_title_bg_height"
        android:layout_alignParentRight="true"
        android:gravity="center"
        style="@style/DgWidgetsTitleRightTv"
        android:text="分类"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="visible"/>
        <com.zjyeshi.dajiujiao.buyer.widgets.search.SearchWidget
            android:id="@+id/searchWidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/rightTv"
            android:layout_toRightOf="@+id/returnTv"
            android:layout_toEndOf="@+id/returnTv" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffff">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/de_default_portrait"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:id="@+id/imageView3"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阿托姆"
            android:id="@+id/textView6"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_above="@+id/textView7"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:drawableLeft="@drawable/position"
            android:text="M78星云xxxxxxxx"
            android:textSize="12sp"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:id="@+id/textView7" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chat"
            android:id="@+id/imageView5"
            android:layout_marginRight="23dp"
            android:layout_marginEnd="23dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView4"
            android:layout_toStartOf="@+id/imageView4" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tel"
            android:id="@+id/imageView4"
            android:layout_alignTop="@+id/imageView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
<RelativeLayout
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="#841528"
    android:layout_marginBottom="5dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_back"
        android:id="@+id/imageView6"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="满100减1"
    android:textSize="10sp"
    android:layout_centerVertical="true"
    android:layout_marginLeft="5dp"
    android:layout_toRightOf="@+id/imageView6"
    android:layout_toEndOf="@+id/imageView6"
    android:id="@+id/textView9" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8个活动>"
        android:id="@+id/textView8"
        android:textSize="10sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TableLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_168"
            android:background="@color/color_bottom_translucent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/normalPriceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/carNumTv"
                        style="@style/FontWhite16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/carPriceTv"
                        android:ellipsize="end"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:text="3箱" />

                    <TextView
                        android:id="@+id/carPriceTv"
                        style="@style/FontWhite16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_30"
                        android:layout_marginRight="@dimen/dimen_30"
                        android:text="0元" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/marketPriceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/marketCarNumTv"
                        style="@style/FontWhite16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/marketCarPriceTv"
                        android:ellipsize="end"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:text="3箱" />

                    <TextView
                        android:id="@+id/marketCarPriceTv"
                        style="@style/FontWhite16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_30"
                        android:layout_marginRight="@dimen/dimen_30"
                        android:text="0元" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/goCarBtn"
                style="@style/FontWhite16"
                android:layout_width="100dp"
                android:layout_height="@dimen/dimen_168"
                android:background="@drawable/no_corner_btn_click"
                android:text="@string/go_buy_car" />
        </LinearLayout>

    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
