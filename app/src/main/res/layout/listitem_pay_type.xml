<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/item_selector"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_177"
        android:paddingLeft="@dimen/dimen_48">
        <ImageView
            android:id="@+id/iconIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weixin_pay"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_toRightOf="@id/iconIv"
            android:layout_marginLeft="@dimen/dimen_54"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/payTypeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontBlack16"
                tools:text="支付方式" />
            <TextView
                android:id="@+id/payDesTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontDistance14"
                tools:text="支付方式描述"
                android:layout_marginTop="@dimen/dimen_18" />
        </LinearLayout>
        <ImageView
            android:id="@+id/checkIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_48"
            android:src="@drawable/selected" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_divider"
            android:background="@color/color_divider"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>