<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/backLayout"
    android:background="@drawable/item_selector"
    android:paddingLeft="@dimen/dimen_48"
    android:paddingRight="@dimen/dimen_48">
    <RelativeLayout
        android:id="@+id/imgLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_210"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:id="@+id/photoLayout"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dimen_150"
            android:layout_height="@dimen/dimen_150">
            <com.zjyeshi.dajiujiao.buyer.views.roundedimageview.CircleImageView
                android:scaleType="centerCrop"
                android:id="@+id/photoIv"
                android:layout_width="@dimen/dimen_150"
                android:layout_height="@dimen/dimen_150"
                android:layout_centerInParent="true"
                android:src="@drawable/default_tx"/>
            <com.zjyeshi.dajiujiao.buyer.views.UnReadNumView
                android:id="@+id/unreadView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@id/photoLayout"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_150"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/titleTv"
                android:layout_toLeftOf="@+id/timeTv"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/FontBlack16"
                android:text="XXX"
                />
            <TextView
                android:id="@+id/timeTv"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontGray12"
                android:text="XXX"
                />
            <TextView
                android:id="@+id/contentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontGray14"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignParentBottom="true"
                android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_divider"
            android:layout_alignParentBottom="true"
            android:background="@color/color_divider"/>
    </RelativeLayout>



</RelativeLayout>