<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_225"
        android:background="@color/color_white">


        <TextView
            android:id="@+id/titleTv"
            style="@style/FontBlack16"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginLeft="@dimen/dimen_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/timeTv"
            style="@style/FontGray14"
            tools:text="明细内容"
            android:layout_below="@id/titleTv"
            android:layout_marginTop="@dimen/dimen_45"
            android:layout_marginLeft="@dimen/dimen_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/spPersonTv"
            android:text="金额"
            style="@style/FontGray14"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dimen_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/priceTv"
            style="@style/FontTime14"
            android:layout_below="@id/spPersonTv"
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <com.zjyeshi.dajiujiao.buyer.views.other.MyGridView
        android:background="@color/color_white"
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:numColumns="5"
        android:padding="@dimen/dimen_48"
        android:listSelector="@null">
    </com.zjyeshi.dajiujiao.buyer.views.other.MyGridView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/color_divider"
        />
</LinearLayout>