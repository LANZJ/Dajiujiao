<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg"
    android:paddingLeft="@dimen/dimen_48">
    <ImageView
        android:id="@+id/photoIv"
        android:layout_marginTop="@dimen/dimen_36"
        android:layout_width="@dimen/dimen_204"
        android:layout_height="@dimen/dimen_204"
        android:scaleType="centerCrop"
        android:background="@color/color_not_select"/>
    <LinearLayout
        android:id="@+id/midLayout"
        android:orientation="vertical"
        android:layout_alignTop="@id/photoIv"
        android:layout_toRightOf="@id/photoIv"
        android:layout_marginLeft="@dimen/dimen_42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontBlack16"
            android:text="御霆酒类专营店"
            />
        <TextView
            android:id="@+id/priceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontGray14"
            android:text="原价¥300"
            android:layout_marginTop="@dimen/dimen_18"/>
        <TextView
            android:id="@+id/scoreTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontRed14"
            android:layout_marginTop="@dimen/dimen_12"
            android:text="500积分"/>
    </LinearLayout>
    <Button
        android:id="@+id/changeBtn"
        android:background="@drawable/change_btn_shape"
        style="@style/FontWhite16"
        android:text="@string/change"
        android:layout_width="@dimen/dimen_234"
        android:layout_height="@dimen/dimen_105"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_48"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/color_divider"
        android:layout_below="@+id/photoIv"
        android:layout_marginTop="@dimen/dimen_30"
       />
</RelativeLayout>