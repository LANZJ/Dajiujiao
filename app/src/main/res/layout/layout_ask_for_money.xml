<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.xuan.bigdog.lib.widgets.title.DGTitleLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FontGray14"
        android:text="员工：王小二"
        android:layout_marginLeft="@dimen/dimen_60"
        android:layout_marginBottom="@dimen/dimen_45"
        android:layout_marginTop="@dimen/dimen_45"/>

    <com.zjyeshi.dajiujiao.buyer.views.other.BUPullToRefreshVerticalListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:listSelector="@drawable/item_selector">
    </com.zjyeshi.dajiujiao.buyer.views.other.BUPullToRefreshVerticalListView>
</LinearLayout>