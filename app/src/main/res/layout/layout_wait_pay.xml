<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">
    <com.xuan.bigdog.lib.widgets.title.DGTitleLayout
        android:id="@+id/titleLayout"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.xuan.bigappleui.lib.view.scrollview.BUVerticalScrollView
        android:layout_above="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleLayout"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zjyeshi.dajiujiao.buyer.widgets.store.OrderProgressWidget
                android:id="@+id/orderProgressWidget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_divider"
                android:background="@color/color_divider"
                android:layout_marginTop="@dimen/dimen_69"/>
            <RelativeLayout
                android:id="@+id/goStoreLayout"
                android:background="@drawable/item_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_18"
                android:paddingTop="@dimen/dimen_18">
                <ImageView
                    android:id="@+id/dianIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/goodcar_dian"
                    android:layout_marginLeft="@dimen/dimen_48" />
                <TextView
                    android:id="@+id/shopNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontBlack14"
                    tools:text="封疆物语食品店"
                    android:layout_toRightOf="@id/dianIv"
                    android:layout_marginLeft="@dimen/dimen_36"/>
                <TextView
                    android:id="@+id/orderNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontBlack14"
                    tools:text="编号：S100045"
                    android:layout_marginLeft="@dimen/dimen_36"
                    android:layout_toRightOf="@id/dianIv"
                    android:layout_below="@id/shopNameTv"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/color_white"
                android:paddingLeft="@dimen/dimen_48"
                android:paddingRight="@dimen/dimen_48"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/userInfoLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_divider"
                        android:background="@color/color_divider"/>
                    <LinearLayout
                        android:layout_marginTop="@dimen/dimen_48"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="@dimen/dimen_255"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            android:text="收货人"/>
                        <TextView
                            android:id="@+id/receiverTv"
                            android:layout_width="@dimen/dimen_0"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            tools:text="赵小龙"/>
                        <TextView
                            android:id="@+id/phoneTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            tools:text="1122354"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/dimen_30"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="@dimen/dimen_255"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            android:text="收货地址"/>
                        <TextView
                            android:id="@+id/addressTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            tools:text="北京北京市大兴区"/>
                        <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/editAddressRl"
                            android:paddingLeft="@dimen/dimen_30"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/pro_edit"/>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="@dimen/dimen_30"
                        android:layout_marginTop="@dimen/dimen_30"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="@dimen/dimen_255"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            android:text="下单时间"/>
                        <TextView
                            android:id="@+id/timeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            tools:text="2015-10-15 18:19:00"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/confirmStatusLayout"
                        android:layout_marginBottom="@dimen/dimen_30"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="@dimen/dimen_255"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            android:text="确认状态"/>
                        <TextView
                            android:id="@+id/confirmStatusTv"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontLightBlack16"
                            tools:text = "还记得上飞机还是得"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_divider"
                        android:background="@color/color_divider"/>
                </LinearLayout>
                <com.xuan.bigappleui.lib.view.listview.BUHighHeightListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:divider="@null"
                    android:scrollbars="none"
                    android:listSelector="#00000000"
                    android:fadingEdgeLength="@dimen/dimen_0"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_divider"
                android:background="@color/color_divider"
                android:layout_marginBottom="@dimen/dimen_33" />
            <View
                android:id="@+id/moneyDivider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_divider"
                android:background="@color/color_divider"/>
            <LinearLayout
                android:id="@+id/moneyLayout"
                android:orientation="vertical"
                android:background="@color/color_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_48"
                android:paddingRight="@dimen/dimen_48"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:paddingTop="@dimen/dimen_33"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_150">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontLightBlack16"
                        android:layout_centerVertical="true"
                        android:text="实付款"/>
                    <TextView
                        android:id="@+id/truePayTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FontRed18"
                        android:layout_centerVertical="true"
                        tools:text="¥6594.00"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_divider"
                android:background="@color/color_divider"/>
        </LinearLayout>
    </com.xuan.bigappleui.lib.view.scrollview.BUVerticalScrollView>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/bottomLayout"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_168">
        <TextView
            android:visibility="gone"
            android:id="@+id/leftTv"
            android:layout_width="@dimen/dimen_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/color_cancel_oeder_bg"
            style="@style/FontWhite16"
            android:text="@string/cancel_order"
            android:gravity="center"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/redTv"
            android:layout_width="@dimen/dimen_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/theme_selector"
            style="@style/FontWhite16"
            android:text="去付款"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>