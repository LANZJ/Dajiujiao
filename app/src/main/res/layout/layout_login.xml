<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_bg">
    <com.xuan.bigdog.lib.widgets.title.DGTitleLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/dimen_48"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_bg">
            <TextView
                android:id="@+id/registerTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontRed16"
                android:text="@string/register"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="@dimen/dimen_216"
            android:layout_height="@dimen/dimen_216"
            android:layout_marginTop="@dimen/dimen_48"
            android:scaleType="centerCrop"
            android:src="@drawable/default_login"
            android:layout_gravity="center_horizontal"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/dimen_48"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_166"
            android:background="@color/color_white">
            <View
                android:layout_width="@dimen/dimen_divider"
                android:layout_height="@dimen/dimen_166"
                android:background="@color/color_divider"
                android:layout_alignParentLeft="true"
                />
            <View
                android:layout_width="@dimen/dimen_divider"
                android:layout_height="@dimen/dimen_166"
                android:background="@color/color_divider"
                android:layout_alignParentRight="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_divider"
                android:background="@color/color_divider"
                android:layout_alignParentBottom="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_divider"
                android:background="@color/color_divider"
                android:layout_alignParentTop="true"
                />
            <ImageView
                android:id="@+id/loginIv"
                android:scaleType="centerCrop"
                android:layout_marginRight="@dimen/dimen_60"
                android:layout_marginLeft="@dimen/dimen_60"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_user"/>
            <View
                android:id="@+id/verticlaView1"
                android:layout_width="@dimen/dimen_divider"
                android:layout_height="@dimen/dimen_120"
                android:background="@color/color_divider"
                android:layout_toRightOf="@id/loginIv"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                android:layout_toRightOf="@id/verticlaView1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/loginEt"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_weight="1"
                    android:background="@null"
                    android:singleLine="true"
                    style="@style/FontBlack16"
                    android:paddingLeft="@dimen/dimen_48"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/lodinDel"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_60"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_del"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_166"
            android:background="@color/color_white">
            <View
                android:layout_width="@dimen/dimen_divider"
                android:layout_height="@dimen/dimen_166"
                android:background="@color/color_divider"
                android:layout_alignParentLeft="true"
                />
            <View
                android:layout_width="@dimen/dimen_divider"
                android:layout_height="@dimen/dimen_166"
                android:background="@color/color_divider"
                android:layout_alignParentRight="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_divider"
                android:background="@color/color_divider"
                android:layout_alignParentBottom="true"
                />
            <ImageView
                android:id="@+id/pwdIv"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_60"
                android:layout_marginLeft="@dimen/dimen_60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_pwd"/>
            <View
                android:id="@+id/verticlaView2"
                android:layout_width="@dimen/dimen_divider"
                android:layout_height="@dimen/dimen_120"
                android:background="@color/color_divider"
                android:layout_toRightOf="@id/pwdIv"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                android:layout_toRightOf="@id/verticlaView2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/pwdEt"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_weight="1"
                    android:background="@null"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/dimen_48"
                    android:layout_height="match_parent" />
                <TextView
                    android:paddingRight="@dimen/dimen_48"
                    android:id="@+id/forgetPwdTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    style="@style/FontRed14"
                    android:text="@string/forget_password"/>
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/loginBtn"
            android:layout_marginTop="@dimen/dimen_48"
            android:layout_width="match_parent"
            android:background="@drawable/btn_click"
            android:text="@string/login"
            style="@style/FontWhite16"
            android:layout_height="@dimen/dimen_150" />
    </LinearLayout>

</LinearLayout>