<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150"
        android:background="@drawable/item_selector">

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontBlack16"
            android:text="大酒窖"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_45"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/checkIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_45"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_toLeftOf="@id/goIv"
            android:visibility="gone"
            android:id="@+id/nextTv"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_45"
            style="@style/FontGray14"
            android:text="请选择终端"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/goIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/goin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_48"/>

        <com.zjyeshi.dajiujiao.buyer.views.UnReadNumView
            android:id="@+id/unReadNumView"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/color_divider"/>
</LinearLayout>