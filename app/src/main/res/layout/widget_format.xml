<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_102">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/unitTv"
                android:layout_width="@dimen/dimen_144"
                android:layout_height="@dimen/dimen_96"
                style="@style/FontBlack16"
                android:text="@string/ping"
                android:gravity="center"
                android:background="@drawable/type_btn_shape"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/boxTv"
                android:layout_width="@dimen/dimen_144"
                android:layout_height="@dimen/dimen_96"
                style="@style/FontBlack16"
                android:text="@string/xiang"
                android:gravity="center"
                android:background="@drawable/type_btn_shape"
                />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2">

        <ImageView
            android:id="@+id/lessIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/less" />

        <EditText
            android:id="@+id/numEt"
            style="@style/FontBlack16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_toLeftOf="@+id/addIv"
            android:layout_toRightOf="@+id/lessIv"
            android:background="@drawable/border_shape"
            android:gravity="center"
            android:text="0"
            android:digits="1234567890"
            android:visibility="gone" />

        <TextView
            android:id="@+id/numTv"
            style="@style/FontBlack14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_toLeftOf="@+id/addIv"
            android:layout_toRightOf="@+id/lessIv"
            android:background="@drawable/no_corner_color_shape"
            android:gravity="center"
            android:text="0" />

        <ImageView
            android:id="@+id/addIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/add" />
    </RelativeLayout>

</LinearLayout>