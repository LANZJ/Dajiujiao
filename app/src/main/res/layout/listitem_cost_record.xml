<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_225"
        android:background="@drawable/item_selector">

        <TextView
            android:id="@+id/titleTv"
            android:text="XXX报销主题"
            style="@style/FontBlack16"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginLeft="@dimen/dimen_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/dimen_30"
            android:id="@+id/readStatusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontRed14"
            android:text = "[未读]"
            android:layout_alignBaseline="@id/titleTv"
            android:layout_toRightOf="@id/titleTv"/>

        <TextView
            android:id="@+id/timeTv"
            style="@style/FontGray14"
            android:layout_below="@id/titleTv"
            android:layout_marginTop="@dimen/dimen_45"
            android:layout_marginLeft="@dimen/dimen_60"
            android:text="2016.06.16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/statusTv"
            android:text="等待王经理审批"
            style="@style/FontOrange14"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dimen_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/noticeTv"
            style="@style/FontTime14"
            android:text="提醒他"
            android:background="@drawable/blue_border_shape"
            android:padding="@dimen/dimen_6"
            android:gravity="center"
            android:layout_below="@id/statusTv"
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dimen_195"

            android:layout_height="@dimen/dimen_75" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30"
        android:background="@color/circle_bg"
        />
</LinearLayout>