<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_bg">
    <com.xuan.bigdog.lib.widgets.title.DGTitleLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.xuan.bigappleui.lib.view.scrollview.BUVerticalScrollView
        android:layout_above="@+id/bottomLayout"
        android:layout_below="@id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="@dimen/dimen_30"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_225"
                android:background="@color/color_white">

                <TextView
                    android:id="@+id/bxTitleTv"
                    android:text="XXX报销主题"
                    style="@style/FontBlack16"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:layout_marginLeft="@dimen/dimen_60"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/timeTv"
                    style="@style/FontGray14"
                    android:layout_below="@id/bxTitleTv"
                    android:layout_marginTop="@dimen/dimen_45"
                    android:layout_marginLeft="@dimen/dimen_60"
                    android:text="总金额:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_toRightOf="@id/timeTv"
                    android:id="@+id/priceTv"
                    style="@style/FontTime14"
                    android:layout_below="@id/bxTitleTv"
                    android:layout_marginTop="@dimen/dimen_45"
                    android:layout_marginLeft="@dimen/dimen_48"
                    android:text="¥123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/spPersonTv"
                    android:text="申请人：王小明"
                    style="@style/FontGray14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/priceTv"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_30"
                style="@style/FontGray14"
                android:text="报销内容"/>
            <com.xuan.bigappleui.lib.view.listview.BUHighHeightListView
                android:id="@+id/contentListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:fadingEdgeLength="0dp"
                android:scrollbars="none"/>
            <com.zjyeshi.dajiujiao.buyer.widgets.PathWidget
                android:id="@+id/pathWidget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/linedet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_30"
                style="@style/FontGray14"
                android:text="评论"/>
            <com.xuan.bigappleui.lib.view.listview.BUHighHeightListView
                android:id="@+id/commentListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:fadingEdgeLength="0dp"
                android:scrollbars="none"/>
            </LinearLayout>
        </LinearLayout>
    </com.xuan.bigappleui.lib.view.scrollview.BUVerticalScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/bottomLayout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zjyeshi.dajiujiao.buyer.views.comment.CommentBottomBarView
            android:visibility="gone"
            android:id="@+id/commentBottomView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_divider"
            android:background="@color/color_divider"/>

        <LinearLayout
            android:id="@+id/fourLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/color_bg"
            android:layout_height="45dp">
            <!--提醒审批-->
            <RelativeLayout
                android:id="@+id/noticeLayout"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontBlack16"
                    android:text="提醒审批人"
                    android:layout_centerInParent="true"/>
                <View
                    android:layout_width="@dimen/dimen_divider"
                    android:layout_height="match_parent"
                    android:background="@color/color_divider"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <!--通过-->
            <RelativeLayout
                android:id="@+id/passLayout"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontBlack16"
                    android:text="直接通过"
                    android:layout_centerInParent="true"/>
                <View
                    android:layout_width="@dimen/dimen_divider"
                    android:layout_height="match_parent"
                    android:background="@color/color_divider"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <!--拒绝-->
            <RelativeLayout
                android:id="@+id/refuseLayout"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontBlack16"
                    android:text="拒绝"
                    android:layout_centerInParent="true"/>
                <View
                    android:layout_width="@dimen/dimen_divider"
                    android:layout_height="match_parent"
                    android:background="@color/color_divider"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <!--下一级-->
            <RelativeLayout
                android:id="@+id/nextLayout"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontBlack16"
                    android:text="下一级审批"
                    android:layout_centerInParent="true"/>
                <View
                    android:layout_width="@dimen/dimen_divider"
                    android:layout_height="match_parent"
                    android:background="@color/color_divider"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <!--评论-->
            <RelativeLayout
                android:id="@+id/commentLayout"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontBlack16"
                    android:text="评论"
                    android:layout_centerInParent="true"/>
                <View
                    android:layout_width="@dimen/dimen_divider"
                    android:layout_height="match_parent"
                    android:background="@color/color_divider"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <com.zjyeshi.dajiujiao.buyer.views.comment.CommentVolumeView
        android:layout_centerInParent="true"
        android:id="@+id/volumeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>